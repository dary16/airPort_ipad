.search {
    border-bottom: 1px solid #dbdbdb;
}

.search form {
    padding: 0.6rem 0;
}

.searchItem {
    float: left;
    margin-left: 0.62rem;
}

.searchItem .title {
    font-size: 0.42rem;
    color: #909090;
    height: 0.5rem;
    line-height: 0.5rem;
    float: left;
}

.layui-input,
.layui-select,
.layui-textarea {
    border: 1px solid #8c8c8c;
    background: none;
    color: #909090;
}

.input-block {
    width: 3.2rem;
    float: left;
}

input::-webkit-input-placeholder {
    /* placeholder颜色  */
    color: #909090;
    /* placeholder字体大小  */
    font-size: 0.3rem;
}

.searchBtn {
    height: 0.46rem;
    line-height: 0.46rem;
    background: #339ed4;
    color: #fff;
    font-size: 0.28rem;
    text-align: center;
    width: 1.4rem;
    border: none;
    white-space: nowrap;
    margin-top: 0.02rem;
}

.contentList .title {
    overflow: hidden;
    margin-bottom: 0;
}

.contentList .title li {
    float: left;
    font-size: 0.3rem;
    color: #0383c4;
    line-height: .75rem;
    text-align: center;
    overflow: hidden;
    /*内容超出宽度时隐藏超出部分的内容 */
    text-overflow: ellipsis;
    /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
    white-space: nowrap;
    /*不换行 */
}

.contentList .list ul {
    border-top: 1px solid #dbdbdb;
    overflow: hidden;
    margin-bottom: 0;
}

.contentList .list ul:nth-child(2n-1) {
    background: #f6f6f6;
}

.contentList .list ul li {
    float: left;
    font-size: 0.3rem;
    color: #4c4c4c;
    line-height: .74rem;
    text-align: center;
    overflow: hidden;
    /*内容超出宽度时隐藏超出部分的内容 */
    text-overflow: ellipsis;
    /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
    white-space: nowrap;
    /*不换行 */
}

.contentList .list ul li .video {
    width: 0.63rem;
    height: 0.4rem;
}

.operationBtns a {
    width: 1.15rem;
    height: 0.54rem;
    line-height: 0.54rem;
    text-align: center;
    color: #fff;
    font-size: 0.3rem;
    background: #39b0ec;
    display: inline-block;
    margin: 0.41rem auto 0 auto;
    border-radius: 0.1rem;
    cursor: pointer;
    margin: 0 0.05rem;
}

/**列表无数据样式**/
.noData {
    width: 100%;
    text-align: center;
    font-size: 0.4rem;
    min-height: 3rem;
    line-height: 3rem;
}

/**分页**/
#pagination {
    text-align: center;
    padding: 0.1rem 0;
    display: none;
    background: #eee;
}

.layui-laypage a,
.layui-laypage span {
    padding: 0 0.3rem;
    height: 0.7rem;
    line-height: 0.7rem;
    font-size: 0.38rem;
}